@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
            }

<script type="text/javascript">
    $().ready(function () {
        HabilitarTipoPersona();
    });
    $("body").on("change", "#TipoPersonaId", function () {
        HabilitarTipoPersona();
    });
    function HabilitarTipoPersona() {
        var selTipoPersona = document.getElementById("TipoPersonaId");
        var cntPersonaFisica = document.getElementById("cnt-persona-fisica");
        var cntPersonaJuridica = document.getElementById("cnt-persona-juridica");
        let tipoPersonaId = selTipoPersona.options[selTipoPersona.selectedIndex].value
        if (tipoPersonaId == 2) {
            cntPersonaFisica.style.display = 'block';
            cntPersonaJuridica.style.display = 'none';
        } else {
            cntPersonaFisica.style.display = 'none';
            cntPersonaJuridica.style.display = 'block';
        }
    }

</script>
