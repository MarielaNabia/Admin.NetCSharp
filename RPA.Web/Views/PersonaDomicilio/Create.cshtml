@model RPA.Web.PersonaDomicilio

@{
    ViewData["Title"] = "Agregar";
}

<h1>Agregar</h1>

<h4>Domicilio de Persona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonaId" class="control-label"></label>
               @*<select asp-for="PersonaId" class ="form-control" asp-items="ViewBag.PersonaId"></select>*@
                <select asp-for="Persona" class="form-control" asp-items="ViewBag.Persona"></select>
            </div>
            <div class="form-group">
                <label asp-for="DomicilioId" class="control-label"></label>
                <select asp-for="DomicilioId" class ="form-control" asp-items="ViewBag.DomicilioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoDomicilioId" class="control-label"></label>
                <select asp-for="TipoDomicilioId" class ="form-control" asp-items="ViewBag.TipoDomicilioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaAlta" class="control-label"></label>
                <input asp-for="FechaAlta" class="form-control" />
                <span asp-validation-for="FechaAlta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaBaja" class="control-label"></label>
                <input asp-for="FechaBaja" class="form-control" />
                <span asp-validation-for="FechaBaja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
